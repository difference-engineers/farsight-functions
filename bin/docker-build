#!/bin/bash

set -e

docker build \
  --cache-from us.gcr.io/$1/base:latest \
  --tag us.gcr.io/$1/base:latest \
  --tag us.gcr.io/$1/base:$2 \
  base

if [ $3 ]
  then
  docker build \
    --cache-from us.gcr.io/$1/base:latest \
    --cache-from us.gcr.io/$1/$3:latest \
    --tag farsight-functions_$3 \
    --tag us.gcr.io/$1/$3:latest \
    --tag us.gcr.io/$1/$3:$2 \
    $3
fi
