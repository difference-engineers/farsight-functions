#!/usr/bin/env ruby

system("source .local-env && _services/postgres/docker-entrypoint-initdb.d/create-users-and-groups.sh")
system("bin/local-link")

File.read("FUNCTIONS").split("\n").each do |name|
  system("source .local-env && cd #{name} && bundle install")
  system("source .local-env && cd #{name} && FUNCTION=#{name} VERSION=0 bundle exec rake db:setup")
end
