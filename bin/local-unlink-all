#!/usr/bin/env ruby

File.read("SERVICES").split("\n").each do |name|
  puts "Creating links for #{name}/..."
  exit unless `unlink #{name}/db/`
  exit unless `unlink #{name}/boot.rb`
  exit unless `unlink #{name}/config.ru`
  exit unless `unlink #{name}/mocks.rb`
  exit unless `unlink #{name}/configuration.rb`
  exit unless `unlink #{name}/application.rb`
  exit unless `unlink #{name}/database.rb`
  exit unless `unlink #{name}/Rakefile`
end
